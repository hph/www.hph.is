{
  "private": true,
  "scripts": {
    "build:client": "webpack --config=cfg/webpack-client-config.babel.js",
    "build:server": "webpack --config=cfg/webpack-server-config.babel.js",
    "build": "yarn build:client && yarn build:server",
    "build:production": "rm -rf build && mkdir build && NODE_ENV=production bin/collect-routes && NODE_ENV=production yarn build",
    "postinstall": "yarn build:production",
    "dev": "mkdir -p build && bin/collect-routes && bin/build",
    "lint": "eslint --ignore-path=.gitignore .",
    "start": "clusterfork --concurrency=$WEB_CONCURRENCY bin/serve"
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-emotion": "^9.0.1",
    "babel-plugin-preval": "^1.6.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-css": "^4.2.1",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "copy-webpack-plugin": "^4.3.1",
    "emotion": "^9.0.2",
    "emotion-server": "^9.0.2",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "express": "^4.16.2",
    "helmet": "^3.9.0",
    "node-clusterfork": "^0.4.0",
    "pino": "^4.13.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-emotion": "^9.0.2",
    "react-loadable": "^5.3.1",
    "typeface-source-sans-pro": "^0.0.54",
    "webpack": "^3.10.0",
    "webpack-hashed-chunkids": "^1.0.5"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      [
        "emotion",
        {
          "hoist": true,
          "autoLabel": true,
          "labelFormat": "[local]"
        }
      ],
      "preval",
      "react-loadable/babel",
      "syntax-dynamic-import",
      "transform-class-properties",
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "jsx-a11y",
      "react"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "arrow-body-style": 0,
      "arrow-parens": 0,
      "class-methods-use-this": 0,
      "consistent-return": 0,
      "function-paren-newline": 0,
      "import/extensions": 0,
      "import/no-unresolved": 0,
      "indent": 0,
      "jsx-a11y/no-autofocus": 0,
      "jsx-a11y/no-static-element-interactions": 0,
      "jsx-quotes": [
        2,
        "prefer-double"
      ],
      "no-confusing-arrow": 0,
      "no-mixed-operators": [
        2,
        {
          "allowSamePrecedence": true
        }
      ],
      "no-plusplus": [
        2,
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "no-return-assign": 0,
      "no-useless-escape": 0,
      "object-curly-newline": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-closing-bracket-location": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            "js"
          ]
        }
      ],
      "react/jsx-indent": 0,
      "react/no-array-index-key": 0,
      "react/no-danger": 0,
      "react/no-did-mount-set-state": 0,
      "react/prefer-stateless-function": 2,
      "react/prop-types": 0
    }
  }
}
